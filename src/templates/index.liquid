<section id="articles">
    {% for article in model.articles -%}
    <article class="post">
        <header>
        <h1><a href="/articles/{{article.slug}}">{{ article.title }}</a></h1>
        <span class="date">{{ article.date }}</span>
        </header>

        <section class="content">
        {{ article.summary }}
        </section>
        <div class="more"><a href="#">read on &raquo;</a></div>
    </article>
    {% endfor -%}
</section>

